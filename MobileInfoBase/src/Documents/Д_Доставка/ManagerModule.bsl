Функция ПолучитьДанныеДокументов(МассивОбъектов)
// Володин А.А. 
// Задача 1 ДЗ Механизмы печати 
// 16 октября 2024 г.
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	|	Д_Доставка.Ссылка КАК Ссылка,
	|	Д_Доставка.Номер КАК Номер,
	|	Д_Доставка.Дата,
	|	Д_Доставка.Организация,
	|	Д_Доставка.Контрагент,
	|	Д_Доставка.Договор,
	|	Д_Доставка.АдресДоставки,
	|	Д_Доставка.Основание,
	|	Д_Доставка.Ответственный,
	|	Д_Доставка.Комментарий,
	|	Д_Доставка.Товары.(
	|		НомерСтроки,
	|		Ссылка,
	|		Номенклатура,
	|		Количество)
	|ИЗ
	|	Документ.Д_Доставка КАК Д_Доставка
	|ГДЕ
	|	Д_Доставка.Ссылка В (&МассивОбъектов)";
	
	Запрос.УстановитьПараметр("МассивОбъектов", МассивОбъектов);
	
	Возврат Запрос.Выполнить().Выбрать();
